{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false
  },
  "include": [
    "server.ts",
    "routes/**/*.ts",
    "models/**/*.ts",
    "middleware/**/*.ts",
    "types/**/*.ts",
    "firebase.ts",
    "session.ts"
  ]
}
