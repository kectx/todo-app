{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "server.ts",
    "routes/**/*.ts",
    "models/**/*.ts",
    "middleware/**/*.ts",
    "types/**/*.ts",
    "firebase.ts",
    "session.ts"
  ]
}
